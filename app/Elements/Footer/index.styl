footer
  background-color $darkerGray
  padding-top x(50)

  img
    display block
    margin x(0) auto

  p, a
    display inline-block
    color $white
    opacity 0.7
    font-size x(20)
    font-weight 300
    text-decoration none
    margin x(0) x(50)
    width x(300)
    text-align center

  a
    border-bottom x(2) dashed $blurWhite
    padding-bottom x(10)

  div
    display flex
    justify-content center
    width 100%
    margin x(30) auto x(0)
    padding-bottom x(30)

  +media('mediumLaptop')
    div
      flex-direction column
      align-items center

    p, a
      margin x(10) x(0)
