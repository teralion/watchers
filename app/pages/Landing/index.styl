header
  background-image url("../../../public/header-bg.png")
  background-size cover
  padding-top x(20)

  ul
    display inline-block
    vertical-align top
    margin-top x(30)
    padding-left x(0)

  nav
    width 80%
    margin 0 auto

    li
      color white
      display inline-block
      font-family $fontRegular
      font-size x(14)
      margin-left x(40)

    .contacts
      display inline-block
      float right
      margin-top x(30)

      a
        color $white
        text-decoration none
        font-weight bold
        font-size x(25)

      p
        margin x(0)
        color $white
        opacity 0.5
        font-size x(16)

  .container
    width 80%
    margin x(100) auto x(0)
    padding-bottom x(20)

    p.selfWritingText
      color $beige
      font-size x(16)

    h1
      color $white
      font-family $fontLight
      font-size x(45)
      font-weight 300
      width x(600)

    img
      margin-top x(50)

  nav img
    height auto
    width x(200)

button.default
  display block
  font-family $fontMedium
  font-weight 800
  font-size x(18)
  padding x(20) x(30)
  background-color $beige
  border none
  border-radius x(40)
  margin-top x(50)

section h2
  font-family $fontLight
  font-weight 300
  font-size x(45)
  text-align center
  margin x(0)
  margin-bottom x(40)

section#middle
  padding-top x(50)

  div
    width fit-content
    margin x(0) auto

  ul
    display inline-block
    vertical-align top
    margin-top x(100)

    &:nth-child(3)
      padding-left x(0)

    &:nth-of-type(1)
      li
        text-align right

      button
        float right

  li
    list-style-type none
    font-size x(20)
    opacity 0.6
    font-weight 400
    padding x(15) x(0)

    &.withButton
      opacity 1

section#contacts
  & > div
    display inline-block
    vertical-align top
    min-height x(580)
    padding-top x(50)

  div.containerLeft
    width 60%
    background-color $gray
    padding-left 10%

    div
      margin-bottom x(40)

    h2
      text-align left

    div p
      display inline-block
      vertical-align top
      margin x(0) x(0) x(0) x(15)
      font-family $fontLight
      font-weight 100
      font-size x(20)

    > p
      font-family $fontLight
      font-weight 100
      font-size x(25)
      width x(400)

      &.worksTime
        font-size x(20)
        background-color $darkGray
        color $white
        padding x(10) x(20)
        width x(250)
        margin x(5) x(0)

    h3
      font-family $fontLight
      font-weight 300
      font-size x(40)

  div.containerRight
    width 40%
    padding-left 8%
    background-image url("../../../public/section-contacts-bg.png")

    p
      display inline-block
      width x(400)
      font-weight 300
      color $white
      &:nth-of-type(1)
        font-size x(25)
        margin-top x(40)
      &:nth-of-type(2)
        font-size x(20)
        opacity 0.5

  a
    color $beige
    font-family $fontLight
    font-size x(40)
    text-decoration none
    border-bottom x(2) dashed $blurBeige
    padding-bottom x(20)

footer
  background-color $darkerGray
  padding-top x(50)

  img
    display block
    margin x(0) auto

  p, a
    display inline-block
    color $white
    opacity 0.7
    font-size x(20)
    font-weight 300
    text-decoration none
    margin x(0) x(50)

  a
    border-bottom x(2) dashed $blurWhite
    padding-bottom x(10)

  div
    width x(1080)
    margin x(30) auto x(0)
    padding-bottom x(30)
