
header
  background-image url("../../../public/header-bg.png")
  background-size cover
  padding-top x(20)
  padding-bottom x(40)
  width 100%

  ul
    display inline-block
    vertical-align top
    margin x(0)
    padding x(0)

  nav
    width 80%
    margin 0 auto
    display flex
    align-items center
    justify-content space-between

    li
      display inline-block
      font-family $fontRegular
      font-size x(14)
      margin x(0) x(20)
      padding x(5) x(0)

      a
        color white
        text-decoration none
        font-weight 300

        &:hover
          text-decoration underline

    .contacts
      display inline-block
      float right
      flex-shrink 0

      a
        color white
        text-decoration none
        font-weight bold
        font-size x(25)

      p
        margin x(0)
        color $white
        opacity 0.5
        font-size x(16)

  .container
    width 80%
    margin x(100) auto x(0)

    p.selfWritingText
      color $beige
      font-size x(16)

    h1
      color $white
      font-family $fontLight
      font-size x(45)
      font-weight 300
      width x(600)

    img
      margin-top x(50)

  nav img
    height auto
    width x(200)
    flex-shrink 0


  +media('mediumLaptop')
    nav
      flex-direction column
      width 100%

      img
        display none

      ul
        display flex
        justify-content center
        width 100%

      li
        margin x(0) 2%
        min-width x(70)
        width 20%
        text-align center

        &:nth-of-type(3)
        &:nth-of-type(4)
          display none

      div
        &.contacts
          margin-top x(50)

          a
            font-weight 300
            font-size x(40)

          p
            font-weight 300
            text-align center

    div.container
      width 90%
      padding x(0) 5%

      h1,
      p.selfWritingText
        text-align center
        width auto

    img
      display block
      margin x(50) auto

    button.default
      margin x(0) auto
      margin-top x(100)


  +media('phonePortrait')
    nav
      div
        &.contacts
          a
            font-size x(30)

    div.container
      h1
        font-size x(30)

    img
      width 90%

button.default
a.default
  display block
  font-family $fontMedium
  font-weight 800
  font-size x(18)
  padding x(20) x(30)
  background-color $beige
  border none
  border-radius x(40)
  margin-top x(50)
  cursor pointer
  transition-duration .3s

  &:hover
    background-color #fff1c8
    transform scale(1.1)
    box-shadow x(0) x(5) x(10) x(1) rgba(0, 0, 0, 0.3)

section h2
  font-family $fontLight
  font-weight 300
  font-size x(45)
  text-align center
  margin x(0)
  margin-bottom x(40)

section#middle
  padding-top x(50)

  img
    background-image url("../../../public/lines.png")
    background-repeat no-repeat
    background-position 50% 40%
    background-size 95%

  div
    display flex
    justify-content center
    align-items center
    margin x(0) auto

  ul
    vertical-align top
    padding x(0)

    &:nth-child(3)
      padding-left x(0)

    &:nth-of-type(1)
      li
        text-align right

      button
        display inline-block

  li
    list-style-type none
    font-size x(20)
    opacity 0.6
    font-weight 400
    padding x(35) x(0)
    position relative
    top x(40)

    &.withButton
      opacity 1

    button
      margin x(0)

  +media('mediumLaptop')
    div
      flex-direction column
      position relative
      align-items flex-start
      padding-left 5%
      overflow hidden

    h2
      text-align center
      padding 0 5%
      width 90%
      margin x(0) auto

    img
      position absolute
      background-image none
      order 3
      z-index -1
      bottom x(0)
      left 60%
      height 100%

    li
      padding x(10)
      font-size x(20)

    ul
      width 60%

      &:first-of-type
        position relative
        bottom x(50)
        order 1

        li
          text-align left

      &:last-of-type
        li.withButton
          padding x(15)

        button
          display none

section#contacts
  display flex

  & > div
    display inline-block
    vertical-align top
    min-height x(580)
    padding-top x(50)

  div.containerLeft
    width 60%
    background-color $gray
    padding-left 10%

    div
      margin-bottom x(40)

    h2
      text-align left

    div p
      display inline-block
      vertical-align top
      margin x(0) x(0) x(0) x(15)
      font-family $fontLight
      font-weight 100
      font-size x(20)

    > p
      font-family $fontLight
      font-weight 100
      font-size x(25)
      width x(400)

      &.worksTime
        font-size x(20)
        background-color $darkGray
        color $white
        padding x(10) x(20)
        width x(250)
        margin x(5) x(0)

    h3
      font-family $fontLight
      font-weight 300
      font-size x(40)

  div.containerRight
    width 40%
    padding-left 8%
    background-image url("../../../public/section-contacts-bg.png")

    p
      display inline-block
      width 90%
      max-width x(400)
      font-weight 300
      color $white
      &:nth-of-type(1)
        font-size x(25)
        margin-top x(40)
      &:nth-of-type(2)
        font-size x(20)
        opacity 0.5

  a:not(.default)
    color $beige
    font-family $fontLight
    font-size x(40)
    text-decoration none
    border-bottom x(2) dashed $blurBeige
    padding-bottom x(20)

  a.default
    display inline-block
    text-decoration none
    color black

  +media('mediumLaptop')
    flex-direction column

    div
      &.containerLeft,
      &.containerRight
        width 100%
        padding x(50) 5%
        display flex
        flex-flow column nowrap
        align-items center
        text-align center

      &.containerLeft
        div p
          width 100%
          max-width x(400)
          margin-left x(0)

          &.worksTime
            width 100%
            max-width x(270)
            padding x(15) 5%

        p
          width 100%
          max-width x(400)

        h2
          text-align center

    a
      display block
      text-align center
      max-width x(380)
      margin x(0) auto

    button
      margin x(0) auto
      margin-top x(50)

  +media('phonePortrait')
    div.containerLeft
      h3
        font-size x(30)

    a
      font-size x(30)
      padding-bottom x(10)

footer
  background-color $darkerGray
  padding-top x(50)

  img
    display block
    margin x(0) auto

  p, a
    display inline-block
    color $white
    opacity 0.7
    font-size x(20)
    font-weight 300
    text-decoration none
    margin x(0) x(50)
    width x(300)
    text-align center

  a
    border-bottom x(2) dashed $blurWhite
    padding-bottom x(10)

  div
    display flex
    justify-content center
    width 100%
    margin x(30) auto x(0)
    padding-bottom x(30)

  +media('mediumLaptop')
    div
      flex-direction column
      align-items center

    p, a
      margin x(10) x(0)
