header
  background-image url("../../../public/header-bg.png")
  background-size cover
  padding-top x(20)

  ul
    display inline-block
    vertical-align top
    margin-top x(30)
    padding-left x(0)

  nav
    width 80%
    margin 0 auto

    li
      color white
      display inline-block
      font-family $fontRegular
      font-size x(14)
      margin-left x(70)

    .contacts
      display inline-block
      float right
      margin-top x(30)

      a
        color $white

  nav img
    height auto
    width x(200)
