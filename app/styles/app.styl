@require './fonts.styl'

defineFont('Roboto Light', 'Roboto-Light', 300, 'normal')
defineFont('Roboto Regular', 'Roboto-Regular', 400, 'normal')
defineFont('Roboto Medium', 'Roboto-Medium', 500, 'normal')

*, *:before, *:after
  box-sizing border-box
  font-weight normal
  font-style normal

html
  font-size $defaultFontSize
